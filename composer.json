{
  "name": "plugin/pdc-base",
  "description": "PDC Base plugin",
  "authors": [
    {
      "name": "Yard | Digital Agency",
      "email": "info@yard.nl",
      "homepage": "https://www.yard.nl"
    }
  ],
  "type": "wordpress-plugin",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=7.2",
    "johnbillion/extended-cpts": "^4.0",
    "wpackagist-plugin/meta-box": "^5.0",
    "wpackagist-plugin/posts-to-posts": "^1.0"
  },
  "require-dev": {
    "10up/wp_mock": "dev-master",
    "friendsofphp/php-cs-fixer": "^3.0",
    "mockery/mockery": "^1.0",
    "phpunit/phpunit": "~8.0 | ~9.0",
    "szepeviktor/phpstan-wordpress": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "OWC\\PDC\\Base\\": "./src/Base"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "OWC\\PDC\\Base\\Tests\\": "./tests"
    }
  },
  "scripts": {
    "format": "./vendor/bin/php-cs-fixer fix",
    "phpstan": "./vendor/bin/phpstan analyse",
    "test": [
      "@unit"
    ],
    "unit": "clear && ./vendor/bin/phpunit --colors=always",
    "unit-coverage": "clear && XDEBUG_MODE=coverage ./vendor/bin/phpunit --stderr --colors=always"
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true
    }
  }
}
