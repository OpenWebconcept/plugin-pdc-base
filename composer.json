{
  "name": "plugin/pdc-base",
  "description": "PDC base plugin",
 "authors": [
  {
    "name": "Yard Internet",
    "email": "info@yard.nl",
    "homepage": "https://www.yardinternet.nl"
  }
],
  "type": "wordpress-plugin",
  "require": {
    "php": ">=7.0"
  },
  "require-dev": {
    "mockery/mockery": "1.0.*",
    "phpunit/phpunit": "~6.0",
    "10up/wp_mock": "dev-master",
    "phpmd/phpmd": "@stable"
  },
  "autoload": {
    "psr-4": {
      "OWC\\PDC\\Base\\": "./src/Base",
      "OWC\\PDC\\Base\\Tests\\": "./tests"
    }
  },
  "scripts": {
    "unit": "clear && ./vendor/bin/phpunit  --testsuite 'OWC PDC FAQ Plugin Unit Test Suite' --colors=always",
    "unit-coverage": "clear && ./vendor/bin/phpunit  --testsuite 'OWC PDC FAQ Plugin Unit Test Suite' --colors=always --coverage-html ./tests/coverage",
    "integration": "clear && ./vendor/bin/phpunit  --testsuite 'Integration Test' --colors=always",
    "test": [
      "@unit",
      "@integration"
    ]
  }
}

